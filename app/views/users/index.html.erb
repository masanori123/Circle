      </div>
    </div>
    <div class="introduct-content">
      <div class="c-content">チーム紹介</div>
      <div class="c-introduct-content">
        <%= @user.body %>
      </div>
    </div>
    <div class="result-content">
      <div class="c-content">試合結果</div>
      <div class="c-introduct-content">
        <%= @user.result %>
      </div>
    </div>
