<div class="a-content">
  <div class="left-content">
    <ul class="info-content">
      <li>マイページ</li>
      <li class="menu-content"><a>お知らせ</a></li>
      <li class="menu-content"><%= link_to "チャットリスト", groups_path %></li>
      <li class="menu-content"><a>フォロー</a></li>
      <li class="menu-content"><a>フォロワー</a></li>
      <li class="menu-content"><%= link_to "ユーザー検索", search_categories_path %></li>
      <li class="menu-content"><%= link_to "プロフィール編集", edit_user_path(@user.id) %></li>
      <li class="menu-content"><a>お問い合わせ</a></li>
      <li class="menu-content"><a>利用規約</a></li>
      <li class="menu-content"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%></li>
    </ul>
  </div>
  <div class="right-content">
    <div class="head-content">
      <div class="p-image-content">
        <% if @user.image.present? %>
          <%= image_tag @user.image, class: "user-image" %>
        <% else %>
          <div class="image-content">No Image</div>
        <% end %>
      </div>
      <div class="content-b">
        ユーザー名：<%= @user.name %>
      </div>
      <div class="content-b">
        チーム名：  <%= @user.team_name %>
      </div>
      <div class="content-b">
        所在地：<%= @user.category.category_name %>
      </div>
    </div>
    <div class="introduct-content">
      <div class="c-content">チーム紹介</div>
      <div class="c-introduct-content">
        <%= @user.body %>
      </div>
    </div>
    <div class="result-content">
      <div class="c-content">試合結果</div>
      <div class="c-introduct-content">
        <%= @user.result %>
      </div>
    </div>
  </div>
</div>

